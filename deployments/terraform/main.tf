module "pipes-json-transformer" {
  source = "pipes-json-transformer"
  image = "expediadotcom/haystack-pipes-json-transformer:${var.pipes["version"]}"
  replicas = "${var.pipes["json_transformer_instances"]}"
  namespace = "${var.app_namespace}"
